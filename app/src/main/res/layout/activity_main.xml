<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <com.agilie.RotatableAutofitEditText
        android:id="@+id/autoET"
        android:layout_width="@dimen/autoresize_max_width"
        android:layout_height="wrap_content"
        android:autoSizeStepGranularity="@dimen/autoresize_min_text_size"
        android:maxLines="10"
        android:minLines="1"
        android:lines="4"
        android:gravity="top|start"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/autoresize_max_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textCapSentences|textMultiLine"
        android:singleLine="false"
        android:scrollHorizontally="false"
        app:layout_constraintTop_toTopOf="parent"
        app:minTextSize="@dimen/autoresize_min_text_size"
        android:maxWidth="@dimen/autoresize_min_width"/>


</android.support.constraint.ConstraintLayout>